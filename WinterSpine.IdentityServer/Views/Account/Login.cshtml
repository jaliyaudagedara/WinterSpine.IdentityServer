@model WinterSpine.IdentityServer.ViewModels.LoginViewModel
<div class="login-page">
    <div class="page-header">
        <h1>Login</h1>
    </div>
    @Html.Partial("_ValidationSummary")
    <div class="row">
        @if (Model.IsEnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Local Login</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Username"></label>
                                    <input class="form-control" placeholder="Username" asp-for="Username" autofocus value="admin">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off" value="P@ssw0rd!">
                                </div>
                                @if (Model.IsAllowRememberLogin)
                                {
                                    <div class="form-group login-remember">
                                        <label asp-for="IsRememberLogin">
                                            <input asp-for="IsRememberLogin">
                                            <strong>Remember My Login</strong>
                                        </label>
                                    </div>
                                }
                                <div class="form-group">
                                    <button class="btn btn-primary">Login</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>